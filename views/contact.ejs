<div class="container mt-md-3">
    <div class="row">
        <div class="col-md-8">
            <h2 class="dislpay-4">Daftar Contact</h2>
            <a href="/contact/add" class="btn btn-primary mb-md-2">Tambah Contact</a>

            <% if (msg.length !== 0) { %>
                
                <div class="alert alert-success" role="alert">
                   <%= msg %>
                </div>
                
            <% } %>
            

    <table class="table">
  <thead>

    <tr>
      <th scope="col">#</th>
      <th scope="col">Nama</th>
      <th scope="col">No Handphone</th>
      <th scope="col">Preview</th>
    </tr>
  </thead>
  <tbody>

    <tr>
      <td colspan="4">

    <% if (contacs.length === 0) { %>
      
    <div class="alert alert-danger" role="alert">
        Contact Masih Kosong
    </div>

    <% } %>
    
      </td>
    </tr>

    <% let no = 1; %>
    <% contacs.forEach(contact => { %>
      <tr>
      <th scope="row"><%= no++ %></th>
      <td><%= contact.nama %></td>
      <td><%= contact.nohp %></td>
      <td>
        <a href="/contact/<%= contact.nama %>" class="btn btn-success bandge rounded-pill"><i class="bi bi-info-circle"></i> Details</a>
      </td>
    </tr>
    <% }) %> 

  </tbody>
</table>
        </div>
    </div>
</div>